---
// apps/web/src/pages/index.astro
import Layout from '../layouts/Layout.astro';
---

<Layout title="Voice Document Intelligence">
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
    <!-- Document Upload Section -->
    <div class="bg-white rounded-lg shadow-md p-6">
      <h2 class="text-xl font-semibold text-gray-900 mb-4">
        📄 Document Management
      </h2>
      <div id="document-upload-area">
        <!-- Document upload component will be mounted here -->
      </div>
    </div>
    
    <!-- Voice Interface Section -->
    <div class="bg-white rounded-lg shadow-md p-6">
      <h2 class="text-xl font-semibold text-gray-900 mb-4">
        🎙️ Voice Assistant
      </h2>
      <div id="voice-interface-area">
        <!-- Voice interface component will be mounted here -->
      </div>
    </div>
  </div>
  
  <!-- Document List Section -->
  <div class="mt-8 bg-white rounded-lg shadow-md p-6">
    <h2 class="text-xl font-semibold text-gray-900 mb-4">
      📋 Your Documents
    </h2>
    <div id="document-list-area">
      <!-- Document list component will be mounted here -->
    </div>
  </div>
  
  <!-- Quick Start Guide -->
  <div class="mt-8 bg-blue-50 rounded-lg p-6">
    <h3 class="text-lg font-semibold text-blue-900 mb-3">🚀 Quick Start Guide</h3>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
      <div class="text-center">
        <div class="text-3xl mb-2">1️⃣</div>
        <h4 class="font-medium text-blue-800">Upload Documents</h4>
        <p class="text-sm text-blue-600">Upload PDFs, Word docs, or other documents to get started</p>
      </div>
      <div class="text-center">
        <div class="text-3xl mb-2">2️⃣</div>
        <h4 class="font-medium text-blue-800">Start Voice Chat</h4>
        <p class="text-sm text-blue-600">Click the microphone to start talking to your documents</p>
      </div>
      <div class="text-center">
        <div class="text-3xl mb-2">3️⃣</div>
        <h4 class="font-medium text-blue-800">Ask Questions</h4>
        <p class="text-sm text-blue-600">Ask questions like "What are the safety protocols?" or "Summarize the report"</p>
      </div>
    </div>
  </div>
</Layout>

<script>
  // Mount React components after page load
  import('../components/DocumentUpload.tsx').then(module => {
    // Component mounting logic will go here
  });
  
  import('../components/VoiceInterface.tsx').then(module => {
    // Component mounting logic will go here
  });
  
  import('../components/DocumentList.tsx').then(module => {
    // Component mounting logic will go here
  });
</script>